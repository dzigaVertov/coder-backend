<h1>Productos agregados</h1>

{{#if hayDocs}}
<ul class='lista'>  
  {{#each productos}}    
      <li class='card'>
    <a href="/{{_id}}">Ver Detalle</a>
        {{#each this}}
      <p>{{@key}}: {{this}}</p>
    {{/each}}
    </li>
  {{/each}}
</ul>
{{/if}}

<a {{#if hasPrevPage}} href="/?limit={{limit}}&page={{prevPage}}" {{/if}}>Prev</a>
